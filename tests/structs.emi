Person :: struct
{
	id : u64;
	age : s32;
	height : f32;
};

Couple :: struct
{
	husband : Person;
	wife : Person;
};

structByValue :: (person : Person)
{
	person.age = 99;
}

structByPointer :: (person : ^Person)
{
	person.age = 99;
}

Main :: () -> s64
{
	a : Person;
	b : Person;
	
	a.id = 123456789;
	a.age = 25;
	a.height = 170;

	// Copy
	b = a;

	couple : Couple;
	couple.husband.id = 40;
	couple.husband.age = 22;
	couple.husband.height = 1.73;
	couple.wife.id = 41;
	couple.wife.age = 29;
	couple.wife.height = 1.71;

	PrintF("Husband id:% age:% height:%\n",
			couple.husband.id, couple.husband.age, couple.husband.height,
			couple.wife.id, couple.wife.age, couple.wife.height);

	structByValue(a);
	PrintF("A id:% age:% height:%\n", a.id, a.age, a.height);
	structByPointer(^b);
	PrintF("B id:% age:% height:%\n", b.id, b.age, b.height);

	pointerToA := ^a;
	pointerToA.age = 64;

	pointerToBAge : ^s32 = ^b.age;
	@pointerToBAge = 1;

	Print("Test ok\n");
	return 0;
}
